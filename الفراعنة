import discord
from discord.ext import commands
import random
import yt_dlp

# Ø¥Ø¹Ø¯Ø§Ø¯ Ø§Ù„Ø¨ÙˆØª
intents = discord.Intents.default()
bot = commands.Bot(command_prefix="!", intents=intents)

# ØªÙˆÙƒÙ† Ø§Ù„Ø¨ÙˆØª
TOKEN = "Ø¶Ø¹ Ø§Ù„ØªÙˆÙƒÙ† Ù‡Ù†Ø§"

# Ù…ØªØºÙŠØ± Ù„ØªÙØ¹ÙŠÙ„ Ø¹Ø¬Ù„Ø© Ø§Ù„Ø­Ø¸
fortune_wheel_active = False

# Ù…ØªØºÙŠØ± Ù„ØªØ®Ø²ÙŠÙ† Ø§Ù„Ø­Ø§Ù„Ø© Ø§Ù„Ù…ÙˆØ³ÙŠÙ‚ÙŠØ©
voice_client = None

# Ø¹Ø¬Ù„Ø© Ø§Ù„Ø­Ø¸
@bot.command()
async def activate(ctx):
    global fortune_wheel_active
    fortune_wheel_active = True
    await ctx.send("ğŸ¡ The Fortune Wheel is now active! Type !spin to try your luck!")

@bot.command()
async def deactivate(ctx):
    global fortune_wheel_active
    fortune_wheel_active = False
    await ctx.send("ğŸ¡ The Fortune Wheel is now deactivated. Type !activate to activate it again.")

@bot.command()
async def spin(ctx):
    if not fortune_wheel_active:
        await ctx.send("ğŸ¡ The Fortune Wheel is not active. Type !activate to activate it.")
        return

    prizes = {
        "5000": 90,
        "100000": 5,
        "1000000": 2,
        "5000000": 1,
        "1000000000": 0
    }
    result = random.choices(list(prizes.keys()), weights=prizes.values(), k=1)[0]
    await ctx.send(f"ğŸ¡ You won: {result}!")

# Ù…ÙˆØ³ÙŠÙ‚Ù‰
@bot.command()
async def join(ctx):
    if ctx.author.voice:
        channel = ctx.author.voice.channel
        voice_client = await channel.connect()
        await ctx.send(f"ğŸ¶ Connected to {channel.name}!")
    else:
        await ctx.send("You need to join a voice channel first!")

@bot.command()
async def play(ctx, url):
    if voice_client is None:
        await ctx.send("The bot is not connected to a voice channel!")
        return

    ydl_opts = {
        'format': 'bestaudio/best',
        'postprocessors': [{
            'key': 'FFmpegAudioConvertor',
            'preferredcodec': 'mp3',
            'preferredquality': '192',
        }],
    }
    
    with yt_dlp.YoutubeDL(ydl_opts) as ydl:
        info = ydl.extract_info(url, download=False)
        url2 = info['formats'][0]['url']
        voice_client.play(discord.FFmpegPCMAudio(url2))

    await ctx.send(f"ğŸ¶ Now playing: {info['title']}")

@bot.command()
async def stop(ctx):
    if voice_client.is_playing():
        voice_client.stop()
        await ctx.send("ğŸ¶ Stopped the music.")
    else:
        await ctx.send("No music is currently playing.")

# Ø£ÙˆØ§Ù…Ø± Ø¥Ø¯Ø§Ø±ÙŠØ© (Ù…Ø«Ù„ Ø¨Ø±Ùˆ Ø¨ÙˆØª)
@bot.command()
@commands.has_permissions(ban_members=True)
async def ban(ctx, member: discord.Member, *, reason=None):
    await member.ban(reason=reason)
    await ctx.send(f"ğŸš« Banned {member.mention} for {reason}")

@bot.command()
@commands.has_permissions(kick_members=True)
async def kick(ctx, member: discord.Member, *, reason=None):
    await member.kick(reason=reason)
    await ctx.send(f"ğŸšª Kicked {member.mention} for {reason}")

@bot.command()
async def mute(ctx, member: discord.Member):
    role = discord.utils.get(ctx.guild.roles, name="Muted")
    if not role:
        role = await ctx.guild.create_role(name="Muted")
        for channel in ctx.guild.channels:
            await channel.set_permissions(role, speak=False, send_messages=False)
    await member.add_roles(role)
    await ctx.send(f"ğŸ”‡ Muted {member.mention}")

# Ø£Ø­Ø¯Ø§Ø« Ø§Ù„Ø¨ÙˆØª
@bot.event
async def on_ready():
    print(f"Bot is ready! Logged in as {bot.user}")

